<% layout('/layouts/boilerplate') %>
<body>
  <div id="cluster-map"></div>
  <h1>All Campgrounds</h1>
  <% for (let campground of campgrounds) { %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <% if (campground.images.length > 0 && campground.images[0].url) { %>

        <img
          crossorigin="anonymous"
          class="img-fluid"
          src="<%= campground.images[0].url %>"
          alt="campgroundimg"
        />
        <% } else { %>
        <img
          crossorigin="anonymous"
          class="img-fluid"
          src="https://res.cloudinary.com/de398fjre/image/upload/v1704405399/YelpCamp/j06tvimlp8bbt95ksrqj.jpg"
          alt="campgroundimg"
        />

        <% } %>

        <div class="col-md-8">
          <div class="card-body">
            <div class="card-title"><%= campground.title %></div>
            <hr />
            <p class="card-text"><%= campground.description %></p>
            <hr />
            <p class="text-muted"><%= campground.location %></p>
            <a class="btn btn-primary" href="campgrounds/<%= campground._id %>"
              ><%=campground.title %></a
            >
          </div>
        </div>
      </div>
    </div>
  </div>

  <% } %>
  <div class="row">
    <div class="col-4 offset-2">
      <h1 class="text-success">Submit Campground</h1>
      <a class="btn btn-success btn-small" role="button" href="/campgrounds/new"
        >New Campground</a
      >
    </div>
  </div>
</body>
<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const campgrounds = {type: "FeatureCollection", features: <%-JSON.stringify(campgrounds) %>}
  console.log(campgrounds)
</script>
<script src="/javascripts/clusterMap.js"></script>
